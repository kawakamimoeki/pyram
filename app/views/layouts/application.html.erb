<!DOCTYPE html>
<html>
  <head>
    <%= render partial: "layouts/head" %>
  </head>

  <body class="font-san text-gray-600" style="
    opacity: 0;
    -webkit-transition: all 0.5s;
    -moz-transition: all 0.5s;
    -ms-transition: all 0.5s;
    -o-transition: all 0.5s;
    transition: all 0.5s;">
    <header class="px-4 shadow-md w-full bg-white" style="line-height: 50px; height: 50px;">
      <p class="text-lg font-bold inline-block">
        <%= link_to root_path, class: "text-decoration-none text-dark" do %>
          <%= vite_image_tag "images/logo.png", width: "50px", height: "50px" %>
        <% end %>
      </p>
      <% if current_user %>
        <%= link_to setting_user_path(current_user), class: "px-2 pt-2 float-right", style: "padding-top: 7px;" do %>
          <span class="material-icons-outlined">
            account_circle
          </span>
        <% end %>
      <% end %>
      <% if current_book %>
      <%= link_to setting_book_path(current_book), class: "px-2 float-right", style: "padding-top: 6px;" do %>
        <span class="material-icons-outlined">
          menu_book
        </span>
      <% end %>
      <% end %>
    </header>

    <main class="mx-auto px-3" style="overflow: hidden; box-sizing: border-box; width: 100%; padding-top: 20px; padding-bottom: 100px; max-width: 500px;">
      <%= render(AlertComponent.new(text: flash[:notice]))%>
      <%= yield %>
    </main>
  </body>
</html>
