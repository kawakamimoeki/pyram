<!DOCTYPE html>
<html>
  <head>
    <%= render partial: "layouts/head" %>
  </head>

  <body class="font-san text-gray-600">
    <header class="px-3 shadow fixed w-full bg-white" style="z-index: 100; line-height: 50px; height: 50px;">
      <p class="text-lg font-bold inline-block">
      <%= link_to root_path, class: "text-decoration-none text-dark" do %>
        <%= vite_image_tag "images/logo.png", width: "50px", height: "50px" %>
      <% end %>
      </p>
    </header>

    <main class="mx-auto px-3" style="padding-top: 80px;overflow: hidden; max-width: 500px;">
      <%= render(AlertComponent.new(text: flash[:notice]))%>
      <%= yield %>
    </main>
  </body>
</html>
