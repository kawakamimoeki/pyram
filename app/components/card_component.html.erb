<div class="swiper-slide shadow-2xl rounded-lg">
  <div class="p-4 rounded-t-lg bg-white "  style="border: 4px solid <%= color %>">
  <h4 class="font-bold text-2xl" style="color: <%= color %>">
    <%= @type ? @type.name : "すべて" %>
  </h4>
  <div class="py-2 px-5">
    <div data-controller="doughnut"
        data-doughnut-color-value="<%= color %>"
        data-doughnut-payment-value="<%= expenses_in_month %>"
        data-doughnut-budget-value="<%= sum_budgets %>"></div>
  </div>
  <div class="py-2">
    <canvas data-controller="line"
        data-line-days-value="<%= days.to_json.html_safe %>"
        data-line-payments-value="<%= expense_stack.to_json.html_safe %>"
        data-line-budgets-value="<%= budget_stack.to_json.html_safe %>"></canvas>
  </div>
  </div>
  <div class="text-center">
    <%= link_to "出費を見る", book_payments_path(@book, type: @type&.id, current: Date.today  ), class: "inline-block text-white p-5 w-full rounded-b-lg font-bold", style: "background-color: #{ color }" %>
  </div>
</div>
